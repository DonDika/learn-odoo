<odoo>
    <!-- actions -->
    <record id="estate_property_action" model="ir.actions.act_window">
        <field name="name">Properties</field>
        <field name="res_model">estate.property</field>
        <field name="view_mode">tree,form</field>
    </record> 

    <!-- search & filter -->
    <record id="estate_property_view_search_filter" model="ir.ui.view">
        <field name="name">estate.property.view.search.filter</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="postcode"/>
                <field name="expected_price"/>
                <field name="bedrooms"/>
                <field name="living_area"/>
                <field name="facades"/>
                <field name="property_type_id"/>
                <filter name="state" string="Available" domain="[('state','in',['new','offer_received'])]"/>
                <filter name="postcode" string="Postcode" context="{'group_by':'postcode'}"/>
            </search>
        </field>
    </record>

    <!-- tree view -->
    <record id="estate_property_view_tree" model="ir.ui.view">
        <field name="name">estate.property.view.tree</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="property_type_id"/>
                <field name="postcode"/>
                <field name="bedrooms"/>
                <field name="living_area"/>
                <field name="expected_price"/>
                <field name="selling_price"/>
                <field name="date_availability"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <!-- form view -->
    <record id="estate_property_view_form" model="ir.ui.view">
        <field name="name">estate.property.view.tree</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <!-- header -->
                    <div class="oe_title">
                        <h1><field name="name"/></h1>
                    </div>
                    <group>
                        <field name="tag_ids" widget="many2many_tags" class="pb-3"/>
                        <group>
                            <field name="property_type_id"/>
                            <field name="postcode"/>
                            <field name="date_availability"/>
                            <field name="state" groups="base.group_no_one"/>
                        </group>
                        <group>
                            <field name="expected_price"/>
                            <field name="selling_price"/>
                        </group>
                    </group>
                    <!-- tab -->
                    <notebook>
                        <!-- tab description -->
                        <page string="Description">
                            <group>
                                <field name="description"/>
                                <field name="bedrooms"/>
                                <field name="living_area"/>
                                <field name="facades"/>
                                <field name="garage"/>
                                <field name="garden"/>
                                <field name="garden_area"/>
                                <field name="garden_orientation"/>
                            </group>
                        </page>
                        <!-- tab offers -->
                        <!-- otomatis akan nampilin list view (tree) dari model estate.property.offer yang terhubung dengan property ini. -->
                        <page string="Offers">
                            <field name="offer_ids"/>
                        </page>
                        <!-- tab other info -->
                        <page string="Other Info">
                            <group>
                                <field name="salesperson_id"/>
                                <field name="buyer_id"/>
                            </group>
                        </page>
                        <!-- tab active -->
                        <page string="Active">
                            <group>
                                <field name="active"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form> 
        </field>
    </record>

</odoo>
